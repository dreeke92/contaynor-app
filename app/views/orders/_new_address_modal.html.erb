<div class="modal fade modal-right" id="add_address_modal" tabindex="-1" role="dialog" aria-labelledby="add_address_modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Address</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <%= simple_form_for Address.new, url: {controller: 'address_books', action: "create"}, html: { autocomplete: 'off' } do |f| %>
              <div class="modal-body">
                <div class="form-group">
                  <%= f.input :street_name, placeholder: "Enter the street name", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :street_number, placeholder: "Enter the street number", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :description, placeholder: "Enter description", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :postal_code, placeholder: "Enter postal code", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :telephone_number, placeholder: "Enter telephone number" %>
                </div>
                <div class="form-group">
                  <%= f.input :city, placeholder: "Enter city", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :country, as: :string, required: true %>
                </div>

                <div class="form-group">
                  <%= f.input :address_relation, as: :boolean, label: 'Does this address belong to your organization?', class: "form-check-input radio_buttons" %>
                </div>
                <div class="form-group">
                  <%= f.input :head_quarters, as: :boolean, label: 'Is this the organization headquarters?' %>
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                <%= f.submit "Submit", class: 'btn btn-primary' %>
              </div>
            <% end %>
        </div>
    </div>
</div>