<div class="modal fade modal-right" id="add_user_modal" tabindex="-1" role="dialog" aria-labelledby="add_user_modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New User To Your Organization</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <%= simple_form_for User.new, url: {controller: '/users', action: "create"}, html: { autocomplete: 'off' } do |f| %>
              <div class="modal-body">
                <div class="form-group">
                  <%= f.input :first_name, placeholder: "Enter first name", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :last_name, placeholder: "Enter last name", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :email, placeholder: "Enter email", required: true %>
                </div>
                <div class="form-group">
                  <%= f.input :company_role, placeholder: "Enter company role" %>
                </div>
                <div class="form-group">
                  <%= f.input :telephone_number, placeholder: "Enter telephone number" %>
                </div>

                <div class="form-group">
                  <%= f.input :employee_admin, as: :boolean, label: 'Make user employee admin', class: "form-check-input radio_buttons" %>
                </div>
                <div class="form-group">
                  <%= f.input :organization_admin, as: :boolean, label: 'Make user organization admin' %>
                </div>
                <div class="form-group">
                  <%= f.input :master_admin, as: :boolean, label: 'Make user master admin', class: "form-check-input radio_buttons" %>
                </div>
                <div class="form-group">
                  <%= f.input :dark_theme, as: :boolean, label: 'Assign dark theme' %>
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                <%= f.submit "Submit", class: 'btn btn-primary' %>
              </div>
            <% end %>
        </div>
    </div>
</div>